<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="30dp"
    app:cardCornerRadius="10dp"
    android:layout_height="400dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:orientation="vertical"
        android:background="@drawable/largeborderradius"
        android:showDividers="middle"
        android:divider="@drawable/verticalgap30"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/mask_group__1_"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="-1dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Account Edited \nSucessfully"
            android:textAlignment="center"
            android:textColor="#007438"
            android:textSize="26dp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/homebnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialogboxbnt"
            android:text="Back To Home"
            android:padding="10dp"
            android:textColor="@color/green"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>